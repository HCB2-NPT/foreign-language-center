<Window x:Class="ABC.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Width="960" Height="640" 
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid Background="WhiteSmoke">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="64" />
    		<RowDefinition Height="Auto"/>
    	</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Background="#FFD75C37" HorizontalAlignment="Stretch">
			<DockPanel Grid.Row="0" Height="64" HorizontalAlignment="Left">
				<Button x:Name="btnTraCuuLichThi" Style="{DynamicResource ButtonToolbar}" Content="Tra cứu lịch thi"/>
				<Button x:Name="btnTraCuuKetQua" Style="{DynamicResource ButtonToolbar}" Content="Tra cứu kết quả"/>
				<Button x:Name="btnDangKyDuThi" Style="{DynamicResource ButtonToolbar}" Content="Đăng ký dự thi"/>
			</DockPanel>
		</StackPanel>		
    </Grid>
</Window>
